//			scan.nextLine();
//			String name = scan.nextLine();
//			pstm.setString(2, name);
//			
//			double sal = scan.nextDouble();
//			pstm.setDouble(3, sal);
//			
//			String gender = scan.next();
//			pstm.setString(4, gender);
//			
//			pstm.execute();
			
			
//			for updating data
			
			String sql2 = "update employee set sal=? where id=?";
			
			PreparedStatement pstm = connect.prepareStatement(sql2);
			
			double sal = scan.nextDouble();
			pstm.setDouble(1, sal);
			
			int id = scan.nextInt();
			pstm.setInt(2, id);
			
			pstm.execute();
			
			connect.close();
			
			
