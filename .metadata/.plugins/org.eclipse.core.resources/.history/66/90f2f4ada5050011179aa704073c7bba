package com.connectdatabase;

import java.sql.Connection;
import java.sql.DriverManager;
import java.sql.SQLException;
import java.sql.Statement;

public class EmployeeCrudOperation {
	public static void main(String[] args) {
		
		String url = "jdbc:postgresql://localhost:5433/school";
		String un = "postgres";
		String pwd = "root";
		
		try {
//		load the driver
			Class.forName("org.postgresql.Driver");
			
//		establish the connection
			Connection connect = DriverManager.getConnection(url,un,pwd);
			
//		write queries
			String sql1 = "insert into employee values(1,'dheeraj',50000,'male')";
			String sql2 = "insert into employee values(2,'santhosh',40000,'male')";
			String sql3 = "insert into employee values(3,'arjit',55000,'male')";
			String sql4 = "insert into employee values(4,'aanya',50000,'female')";
			
//		create statement
			Statement stmt = connect.createStatement();
			
//		execute query	
			stmt.execute(sql1);
			stmt.execute(sql2);
			stmt.execute(sql3);
			stmt.execute(sql4);
			
//		close connection
			connect.close();
			
			
		} catch (ClassNotFoundException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		} catch (SQLException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}
	}
}
